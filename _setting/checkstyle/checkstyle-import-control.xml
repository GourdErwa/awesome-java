<!DOCTYPE import-control PUBLIC "-//Puppy Crawl//DTD Import Control 1.1//EN" "http://www.puppycrawl.com/dtds/import_control_1_1.dtd">
<import-control pkg="io.spring.gradle.dependencymanagement">

    <allow pkg=".*" regex="true"/>
    <disallow pkg="io.spring.gradle.dependencymanagement.internal.*" regex="true"/>
    <disallow pkg="org.gradle.api.internal.*" regex="true"/>
    <allow pkg="io.spring.gradle.dependencymanagement.internal.bridge.*" regex="true"/>

    <subpackage name="internal">
        <allow pkg="io.spring.gradle.dependencymanagement.internal.*" regex="true"/>
    </subpackage>

</import-control>
